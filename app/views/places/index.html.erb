<div id="nomster-carousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#nomster-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#nomster-carousel" data-slide-to="1"></li>
    <li data-target="#nomster-carousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item">
      <%= image_tag 'friends-food.jpeg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Discover the best brunch.
      </div>
    </div>
    <div class="item">
      <%= image_tag 'coffee.jpeg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Uncover the best coffee nook.
      </div>
    </div>
    <div class="item active">
      <%= image_tag 'pizza.jpeg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Find your favorite slice.
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#nomster-carousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#nomster-carousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>
    <% if place.comments.present? %>
      <div class="col-xs-10 col-xs-offset-1 comments">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= place.comments.last.message %>
          <small><%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>
  </div>
<% end %>
<div class="col-xs-12 center-flex-containter">
  <%= will_paginate @places %>
</div>
